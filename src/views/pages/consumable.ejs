<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/diet.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/navigation.css">
        <link rel="stylesheet" href="/css/footer.css">
        <title>Operation: Health</title>
    </head>
    <body>
        <%- include('../common/navigation.ejs') %>
        <%- include('../common/nav2.ejs') %>
        <main>
            <form method="POST">
                <fieldset>
                    <p> <%= diet.newmeal %></p>
                    <select name="Name" id="Name">
                        <option value="Chicken Breast">Chicken Breast</option>
                        <option value="Chicken Thigh">Chicken Thigh</option>
                        <option value="Potatoes">Potatoes</option>
                        <option value="Cheddar">Cheddar</option>
                        <option value="Red Leicester">Red Leicester</option>
                        <option value="Mozzarella">Mozzarella</option>
                        <option value="White Bread">White Bread</option>
                        <option value="Brown Bread">Brown Bread</option>
                      </select>
                      <p><%= diet.foodanddrink %></p>
                      <select name="Type" id="Type">
                          <option value="Food">Food</option>
                          <option value="Drink">Drink</option>
                        </select>
                    <p> <%= diet.entergrams %></p>
                    <input id="Amount" type="text" name="Amount" required>
                    <button id="submit">
                        Submit
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                </fieldset>
            </form>
                
            </section>
        </main>
        <%- include('../common/footer.ejs') %>
    </body>
</html>
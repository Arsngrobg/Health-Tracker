<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/profile.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/navigation.css">
        <link rel="stylesheet" href="/css/footer.css">
        <title>Operation: Health</title>
    </head>
    <body>
        <%- include('../common/navigation.ejs') %>
        <main>
            <%- include('../common/settings-bar.ejs') %>
            <section id="profile">
                <div id="profile-header">
                    <h1><%= profile.title1 %></h1>
                    <form action="/profile/edit" method="GET" id="edit-profile">
                        <input type="submit" class="button" value="Edit profile"/>
                    </form>
                </div>
                <p><%= profile.username %> <%= user.Username %></p>
                <p><%= profile.forename %> <%= user.Forename %></p>
                <p><%= profile.surname %> <%= user.Surname %></p>
                <p><%= profile.age %> <%= age %></p>
                <p><%= profile.member %>
                    <script>
                        const dateJoined = new Date("<%= dateJoined %>");
                        const day = String(dateJoined.getUTCDate()).padStart(2, '0');
                        const month = String(dateJoined.getUTCMonth() + 1).padStart(2, '0');
                        const year = dateJoined.getUTCFullYear();
                        const formattedDate = `${day}/${month}/${year}`;
                        document.write(formattedDate);
                    </script>
                </p>
            </section>
            <section id="activity">
                <h1><%= profile.title2 %> </h1>
                <p><%= profile.meals %> <%= meals %></p>
                <p><%= profile.workouts %> <%= workouts %></p>
            </section>
        </main>
        <%- include('../common/footer.ejs') %>
    </body>
</html>
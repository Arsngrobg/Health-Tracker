<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title>Health Tracker</title>
</head>
<body>
<%- include('../common/navigation.ejs') %>
<main>
    <form method="POST" id="form">
        <fieldset>
            <legend>
                <%= resetPassword.title %>
                <i class="fa-regular fa-message"></i>
            </legend>
            <p><%= resetPassword.warning %></p>
            <% if (typeof errorMessage !== 'undefined') { %>
                <p class="error"><%= errorMessage %></p>
            <% } %>
            <label>
                <%= resetPassword.identifier %>
                <input id="identifier" type="text" name="identifier" placeholder="<%= resetPassword.identifierPlaceholder %>" required>
            </label>
            <label>
                <%= resetPassword.newPassword %>
                <input id="newPassword" type="password" name="newPassword" placeholder="<%= resetPassword.newPasswordPlaceholder %>" required>
            </label>
            <label>
                <%= resetPassword.newPasswordConfirmation %>
                <input id="newPasswordConfirmation" type="password" name="newPasswordConfirmation" placeholder="<%= resetPassword.newPasswordConfirmationPlaceholder %>" required>
            </label>
            <button id="submit">
                <%= resetPassword.submit %>
                <i class="fa-regular fa-paper-plane"></i>
            </button>
        </fieldset>
    </form>
</main>
<%- include('../common/footer.ejs') %>
</body>
</html>
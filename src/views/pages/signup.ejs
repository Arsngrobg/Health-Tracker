<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/footer.css">
    <script src="js/signup.js" defer></script>
    <title>Health Tracker</title>
</head>
<body>
<%- include('../common/navigation.ejs') %>
<main>
    <form method="POST">
        <fieldset>
            <legend>
                <%= signup.title %>
                <i class="fa-regular fa-message"></i>
            </legend>
            <p><%= signup.warning %></p>
            <label>
                <%= signup.username %>
                <input id="username" type="text" name="username" placeholder="<%= signup.usernamePlaceholder %>" required>
            </label>
            <label>
                <%= signup.forename %>
                <input id="forename" type="text" name="forename" placeholder="<%= signup.forenamePlaceholder %>" required>
            </label>
            <label>
                <%= signup.surname %>
                <input id="surname" type="text" name="surname" placeholder="<%= signup.surnamePlaceholder %>" required>
            </label>
            <label>
                <%= signup.email %>
                <input id="email" type="email" name="email" placeholder="<%= signup.emailPlaceholder %>" required>
            </label>
            <label>
                <%= signup.password %>
                <input id="password" type="password" name="password" placeholder="<%= signup.passwordPlaceholder %>" required>
            </label>
            <button id="submit">
                <%= signup.submit %>
                <i class="fa-regular fa-paper-plane"></i>
            </button>
        </fieldset>
    </form>
</main>
<%- include('../common/footer.ejs') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/diet.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/navigation.css">
        <link rel="stylesheet" href="/css/footer.css">
        <title>Operation: Health</title>
    </head>
    <body>
        <%- include('../common/navigation.ejs') %>
        <main>

            <h2> Add a diet entry</h2>


            <form method="POST" action="/diet/dietentry">
                <fieldset>
                    <p>Select a meal to add to your diet entry</p>
                    <select name="Meal" id="Meal">
                        <% Meals.forEach(name => { %>
                          <option value="<%= name %>"><%= name %></option>
                        <% }) %>
                      </select>
                    <button id="submit">
                        Add
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                </fieldset>
            </form>




            <h2> Add a new Meal</h2>

            <form method="POST" action="/diet/meal">
                <fieldset>
                    <p>Create a meal with a meal name</p>
                    <input id="Name" type="text" name="Name" required>
                    
                    <p>Add a consumable </p>
                    <div id="consumables">
                        <div class="consumables">
                            <select name="Consumables[]" required>
                                <% consumable.forEach(name => { %>
                                  <option value="<%= name %>"><%= name %></option>
                                <% }) %>
                              </select>
                            <input type="Grams" name="Grams[]" placeholder="Grams" min="1" required>
                        </div>
                    </div>
            
                    <button type="button" onclick="addConsumable()">Add Another Consumable</button>

                    <button id="submit">
                        Add
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                </fieldset>
            </form>

            <h2> Add a new consumable</h2>

            <form method="POST" action="/diet/consumable">
                <fieldset>
                    <p>Enter new consumable name</p>
                    <input id="Name" type="text" name="Name" required>
                      <p>Food or Drink</p>
                      <select name="Type" id="Type">
                          <option value="Food">Food</option>
                          <option value="Drink">Drink</option>
                        </select>

                    <p>Enter the amount of calories</p>
                    <input id="calories" type="text" name="calories" required>
                    <p>Enter the amount of fats</p>
                    <input id="fats" type="text" name="fats" required>
                    <p>Enter the amount of carbs</p>
                    <input id="carbs" type="text" name="carbs" required>
                    <p>Enter the amount of fibre</p>
                    <input id="fibre" type="text" name="fibre" required>
                    <p>Enter the amount of saturates</p>
                    <input id="saturates" type="text" name="saturates" required>
                    <p>Enter the amount of sugar</p>
                    <input id="sugar" type="text" name="sugar" required>
                    <p>Enter the amount of protein</p>
                    <input id="protein" type="text" name="protein" required>
                    <p>How many grams is the values above for ?</p>
                    <input id="Amount" type="text" name="Amount" required>
                    <button id="submit">
                        Add
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                </fieldset>
            </form>
                
        </main>
        <%- include('../common/footer.ejs') %>
    </body>

    <script>
        function addConsumable() {
          const container = document.getElementById('consumables');
          const div = document.createElement('div');
          div.className = 'consumable';
      
          const select = document.createElement('select');
          select.name = 'Consumables[]';
          select.required = true;
          select.innerHTML = `<% consumable.forEach(name => { %>
                                <option value="<%= name %>"><%= name %></option>
                              <% }) %>`;
      
          const quantity = document.createElement('input');
          quantity.type = 'Grams';
          quantity.name = 'Grams[]';
          quantity.placeholder = 'Grams';
          quantity.min = '1';
          quantity.required = true;
      
          div.appendChild(select);
          div.appendChild(quantity);
      
          container.appendChild(div);
        }
      </script>
</html>